%h2
  .deck-name
    = @deck.name

- deck_length = @cards.length

- @cards.each_with_index do |card, index|
  .card{ class: ('hidden' unless index == 0), id: "card_#{index}" }
    %h6
      = "#{index + 1} cards of #{deck_length} total"
    .card-id.hidden
      = card.id
    .front
      %h1= card.front
    .flip
      FLIP THIS CARD
    .controls
      .right
        GOT IT
      .wrong
        MISSED IT
      .review
        = check_box_tag 'review', '1', card.review
        Review
    .back.hidden
      %h3= card.back

.submit-panel.hidden
  %h1
    Submit Panel
  .temporary-results
  .num-right
    Right:
    .num
  .num-wrong
    Wrong:
    .num
  .submit
    Submit

=javascript_include_tag 'decks'
